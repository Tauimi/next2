{
  "name": "technomart",
  "version": "1.0.0",
  "private": true,
  "description": "Интернет-магазин электроники и бытовой техники TechnoMart",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma db push --force-reset",
    "db:seed": "curl -X POST https://your-app.vercel.app/api/force-init",
    "postinstall": "prisma generate",
    "vercel-build": "prisma generate && next build",
    "check-deploy": "node scripts/check-deploy.js",
    "pre-deploy": "npm run check-deploy && npm run build",
    "deploy-init": "node scripts/deploy-with-db-update.js",
    "fix-db": "node scripts/deploy-with-db-update.js"
  },
